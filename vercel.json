{
  "version": 2,
  "builds": [
    {
      "src": "app/main.py",  // Entry point
      "use": "@vercel/python",
      "config": {
        "maxLambdaDuration": 30  // Max execution time (seconds)
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app/main.py"
    }
  ],
  "env": {
    "PYTHONPATH": "."
  }
}
